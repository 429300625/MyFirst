<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.administrator.myfirstapp.view.XCRoundRectImageView
            android:id="@+id/iv_comment_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:background="@drawable/biz_pc_main_info_profile_avatar_bg_dark" />

        <TextView
            android:id="@+id/tv_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_comment_image"
            android:text="用户名称"
            android:textColor="#5DCCFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_comment_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="2014-05-05"
            android:textColor="@color/black"
            android:textSize="18dp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment_cotent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="        这里是评论重灾区这里是评论重灾区这里是评论重灾区这里是评论重灾区这里是评论重灾区这里是评论重灾区这里是评论重灾区"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>