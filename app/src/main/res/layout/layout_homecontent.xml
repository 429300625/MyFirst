<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/iv_homecontent"
        android:layout_width="90dp"
        android:layout_height="85dp" />

    <TextView
        android:id="@+id/tv_content_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_homecontent"
        android:singleLine="true"
        android:text="这是标题"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_content_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_content_title"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_homecontent"
        android:singleLine="true"
        android:text="这是内容"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_content_stamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_content_summary"
        android:text="这是时间"
        android:textSize="16sp" />
</RelativeLayout>